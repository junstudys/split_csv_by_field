/*
 * CSV 智能拆分工具 - 浅色主题
 * 版本: 1.0.0
 */

/* 全局样式 */
* {
    font-family: "Microsoft YaHei", "SimHei", Arial, sans-serif;
    font-size: 10pt;
}

/* 主窗口 */
QMainWindow {
    background-color: #f5f5f5;
}

/* 侧边栏 */
QWidget#sidebar {
    background-color: #2c3e50;
    color: #ecf0f1;
}

QLabel#sidebarTitle {
    font-size: 16px;
    font-weight: bold;
    color: #ecf0f1;
    padding: 10px;
}

QListWidget#navList {
    background-color: transparent;
    border: none;
    outline: none;
}

QListWidget#navList::item {
    padding: 12px 20px;
    color: #bdc3c7;
    border-radius: 4px;
    margin: 2px 5px;
}

QListWidget#navList::item:hover {
    background-color: #34495e;
    color: #ecf0f1;
}

QListWidget#navList::item:selected {
    background-color: #3498db;
    color: #ffffff;
}

/* 页面容器 */
QStackedWidget {
    background-color: #ffffff;
    border: none;
}

/* 页面标题 */
QLabel#pageTitle {
    font-size: 24px;
    font-weight: bold;
    color: #2c3e50;
}

/* 卡片 */
QFrame#card {
    background-color: #ffffff;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 20px;
}

/* 分组框 */
QGroupBox {
    font-size: 11pt;
    font-weight: bold;
    color: #2c3e50;
    border: 1px solid #ddd;
    border-radius: 4px;
    margin-top: 10px;
    padding-top: 10px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 10px;
    padding: 0 5px;
}

/* 按钮 */
QPushButton {
    background-color: #ecf0f1;
    color: #2c3e50;
    border: 1px solid #bdc3c7;
    border-radius: 4px;
    padding: 8px 16px;
    font-size: 10pt;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #d5dbdb;
    border-color: #95a5a6;
}

QPushButton:pressed {
    background-color: #bdc3c7;
}

QPushButton:disabled {
    background-color: #ecf0f1;
    color: #95a5a6;
    border-color: #ddd;
}

/* 主要按钮 */
QPushButton#primaryButton {
    background-color: #3498db;
    color: #ffffff;
    border: none;
    padding: 10px 20px;
    font-size: 10pt;
}

QPushButton#primaryButton:hover {
    background-color: #2980b9;
}

QPushButton#primaryButton:pressed {
    background-color: #21618c;
}

/* 危险按钮 */
QPushButton#dangerButton {
    background-color: #e74c3c;
    color: #ffffff;
    border: none;
}

QPushButton#dangerButton:hover {
    background-color: #c0392b;
}

/* 输入框 */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    color: #2c3e50;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 6px;
    selection-background-color: #3498db;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #3498db;
}

QLineEdit:disabled {
    background-color: #f5f5f5;
    color: #95a5a6;
}

/* 下拉框 */
QComboBox {
    background-color: #ffffff;
    color: #2c3e50;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 6px;
    min-width: 100px;
}

QComboBox:hover {
    border-color: #3498db;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: url(none);
    border: 6px solid transparent;
    border-top-color: #7f8c8d;
    margin-right: 6px;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 1px solid #ddd;
    selection-background-color: #3498db;
    selection-color: #ffffff;
}

/* 列表 */
QListWidget {
    background-color: #ffffff;
    border: 1px solid #ddd;
    border-radius: 4px;
    outline: none;
}

QListWidget::item {
    padding: 8px;
    border-radius: 4px;
    margin: 1px;
}

QListWidget::item:hover {
    background-color: #ecf0f1;
}

QListWidget::item:selected {
    background-color: #3498db;
    color: #ffffff;
}

/* 进度条 */
QProgressBar {
    background-color: #ecf0f1;
    border: 1px solid #ddd;
    border-radius: 4px;
    text-align: center;
    color: #2c3e50;
}

QProgressBar::chunk {
    background-color: #3498db;
    border-radius: 3px;
}

/* 复选框 */
QCheckBox {
    spacing: 5px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #bdc3c7;
    border-radius: 3px;
    background-color: #ffffff;
}

QCheckBox::indicator:hover {
    border-color: #3498db;
}

QCheckBox::indicator:checked {
    background-color: #3498db;
    border-color: #3498db;
    image: url(none);
}

QCheckBox::indicator:checked::after {
    content: "✓";
    color: white;
}

/* 单选按钮 */
QRadioButton {
    spacing: 5px;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #bdc3c7;
    border-radius: 9px;
    background-color: #ffffff;
}

QRadioButton::indicator:hover {
    border-color: #3498db;
}

QRadioButton::indicator:checked {
    background-color: #3498db;
    border-color: #3498db;
}

QRadioButton::indicator:checked::after {
    content: "";
    width: 6px;
    height: 6px;
    border-radius: 3px;
    background-color: white;
    position: absolute;
    top: 4px;
    left: 4px;
}

/* 标签页 */
QTabWidget::pane {
    border: 1px solid #ddd;
    background-color: #ffffff;
}

QTabBar::tab {
    background-color: #ecf0f1;
    color: #2c3e50;
    padding: 10px 20px;
    border: 1px solid #ddd;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    border-bottom: 1px solid #ffffff;
}

QTabBar::tab:hover {
    background-color: #d5dbdb;
}

/* 滚动条 */
QScrollBar:vertical {
    background-color: #f5f5f5;
    width: 12px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #bdc3c7;
    min-height: 30px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: #95a5a6;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar:horizontal {
    background-color: #f5f5f5;
    height: 12px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #bdc3c7;
    min-width: 30px;
    border-radius: 6px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #95a5a6;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0;
}

/* 分割器 */
QSplitter::handle {
    background-color: #ddd;
}

QSplitter::handle:hover {
    background-color: #bdc3c7;
}

/* 工具提示 */
QToolTip {
    background-color: #2c3e50;
    color: #ecf0f1;
    border: none;
    border-radius: 4px;
    padding: 5px;
}
